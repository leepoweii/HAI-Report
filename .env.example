# HAI-Report Environment Variables
# Copy this file to .env and fill in your values

# ===== API Service (FastAPI) =====

# OpenAI API Key (required)
OPENAI_API_KEY=sk-your-api-key-here

# OpenAI Model (optional, defaults to gpt-5-mini)
OPENAI_MODEL=gpt-5-mini

# Enable web search tool (optional, defaults to true)
USE_WEB_SEARCH=true

# LINE Bot (optional - only needed if you want LINE integration)
LINE_CHANNEL_SECRET=your-channel-secret
LINE_CHANNEL_ACCESS_TOKEN=your-channel-access-token

# ===== Web Service (Nuxt) =====

# API URL for frontend to call backend
NUXT_PUBLIC_API_URL=http://localhost:8000
